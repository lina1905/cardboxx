<div class="practice-start-view">
    <div class="doughnut-chart" style="margin-top: 30px; background: conic-gradient(#BF514C {{duecardcountpercentage}}%, #71A87F {{duecardcountpercentage}}% 100%);">
        <div class="doughnut-chart-text">
            {{#duecardcount}}
                {{# str }} chartpractice, cardboxx {{/str}}<br>
                {{duecardcount}}/{{cardcount}}
            {{/duecardcount}}
            {{^duecardcount}}
                {{# str }} chartpracticedone, cardboxx {{/str}}
            {{/duecardcount}}
        </div>
    </div>

    <div style="margin-top: 30px; font-weight: bold; margin-bottom: 20px">
        {{# str }} totalcardsinbox, cardboxx {{/str}} {{cardcount}}
    </div>

    {{#duecardcount}}
        <button id="cardboxx-see-optionstwo" type="button" class="btn btn-primary" data-toggle="modal" data-target="#cardboxxPracticeSettings">
            {{# str }} optionstwo, cardboxx {{/ str }}
        </button>
        <button id="cardboxx-see-options" type="button" class="hidden btn btn-primary" data-toggle="modal" data-target="#cardboxxPracticeSettings">
            {{# str }} optionsone, cardboxx {{/ str }}
        </button>
    {{/duecardcount}}
    {{^duecardcount}}
        <button id="cardboxx-see-optionstwo" type="button" class="hidden btn btn-primary" data-toggle="modal" data-target="#cardboxxPracticeSettings">
            {{# str }} optionstwo, cardboxx {{/ str }}
        </button>
        <button id="cardboxx-see-options" type="button" class="btn btn-primary" data-toggle="modal" data-target="#cardboxxPracticeSettings">
            {{# str }} optionsone, cardboxx {{/ str }}
        </button>
        {{{infoHtmlPracticeDone}}}
    {{/duecardcount}}

    <div id="cardboxx-practiceall-select" style="display: none;" class="item g goldenleft">{{# str }} practiceall, cardboxx {{/ str }}&nbsp; {{{helpbuttonpracticeall}}}</div>
    <div id="cardboxx-practiceall-choices" style="display: none;" class="item h goldenrigth">
        <form id="cardboxx-form-practiceall" class="felement">
            <input type="radio" id="cardboxx-practiceall-yes" name="practiceall" value="0" class="form-check-input"> {{# str }} yes, cardboxx {{/ str }}<br>
            <input type="radio" id="cardboxx-practiceall-no" name="practiceall" value="1" class="form-check-input" checked>{{# str }} no, cardboxx {{/ str }}
        </form>

    </div>

</div>


