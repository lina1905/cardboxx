<div id="cardboxx-practice-content" class="row">

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div id="cardboxx-cardcontainer" class="col-xs-12 col-md-10 col-lg-8 col-xl-6" style="margin-bottom: 10px">
        <button id="cardboxx-end-session" type="button" class="btn btn-secondary">{{# str }} endpractice, cardboxx {{/ str }}</button>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div id="cardboxx-cardcontainer" class="col-xs-12 col-md-10 col-lg-8 col-xl-6 topic">{{topic}}</div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div id="cardboxx-cardcontainer-question" class="col-xs-12 col-md-10 col-lg-8 col-xl-6">
        {{#question}}
            {{> mod_cardboxx/cardside }}
        {{/question}}
        {{#deck}}
            <img src={{deckimgurl}} alt="This card belongs to Deck {{deck}}" class="cardboxx_card_deck_icon">
        {{/deck}}
    </div>
   <div class="hidden-xs col-md-1 col-lg-2 col-xl-3">
        <!--<button id="cardboxx-see-options" type="button" class="btn btn-primary" data-toggle="modal" data-target="#cardboxxPracticeSettings">{{# str }} options, cardboxx {{/ str }}</button>-->
    </div>

</div>



<div id="cardboxx-practice-user-interaction" class="row">

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3 cardboxx-userinput"></div>
    <div class="col-xs-12 col-md-10 col-lg-8 col-xl-6">
        <form id="cardboxx-inputform" autocomplete="off">

            {{#contextquestionavailable}}
                <div class="col-xs-12" >{{{contextquestion}}}</div>
            {{/contextquestionavailable}}

            {{#inputfields}}
                <input id="cardboxx-userinput-{{number}}" type="text" name="answer" class="form-control cardboxx-userinput">
            {{/inputfields}}

            <input id="cardboxx-submit-answer" type="submit" value="{{# str }} submitanswer, cardboxx {{/ str }}" class="btn btn-primary">
            <input id="cardboxx-do-not-know" type="submit" value="{{# str }} dontknow, cardboxx {{/ str }}" class="btn btn-secondary" style="margin-right: 5px">
        </form>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div class="col-xs-12 col-md-10 col-lg-8 col-xl-6"> 
        <div style="float: right; margin-top: 15px">{{# str }} cardsleft, cardboxx {{/ str }} {{cardsleft}}</div>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

</div>