<div class="cardboxx-card">

    {{#frontimages}}
        <div class="cardboxx-image container-fluid">
            <img src='{{frontimagesrc}}' class='img-fluid mx-auto d-block'>
        </div>
    {{/frontimages}}

    {{#fronttexts}}
        <div class="cardboxx-text text-center">
            <h3>{{{fronttext}}}</h3>
        </div>
    {{/fronttexts}}

    {{#backimages}}
        <div class="cardboxx-image cardboxx-back hidden">
            <img src='{{backimagesrc}}' class='img-fluid mx-auto d-block'>
        </div>
    {{/backimages}}

    {{#backtexts}}
        <div class="cardboxx-text cardboxx-back text-center hidden">
            <h3>{{{backtext}}}</h3>
        </div>
    {{/backtexts}}

</div>