<div id="cardboxx-practice-content" class="row cardboxx-practice-content">


    <div class="col-xs-12 col-md-12 col-lg-12 col-xl-12" style="margin-bottom: 35px; margin-top: 10px;">
        <div class="progress" style="height: 18px;">
            <div class="progress-bar" role="progressbar" style="width: {{percentage}}%; text-align: left;
                    padding-left: 15px; color:#AC332D; font-weight: bold; background-color: #F29C39;" aria-valuenow="{{remainingcards}}" aria-valuemin="0" aria-valuemax="{{totalcards}}">
                {{remainingcards}} / {{totalcards}}</div>
        </div>
    </div>



    <div class="hidden-xs col-md-1 col-lg-2 col-xl-2"></div>
    <div id="cardboxx-cardcontainer-question" class="col-xs-12 col-md-10 col-lg-8 col-xl-8 cardboxx-selfcheck-question-side">
            {{#question}}
                {{> mod_cardboxx/cardside }}
            {{/question}}
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-2">
    <!--<button id="cardboxx-see-options" type="button" class="btn btn-primary" data-toggle="modal" data-target="#cardboxxPracticeSettings">{{# str }} options, cardboxx {{/ str }}</button>-->
    </div>

</div>


<div id="cardboxx-practice-user-interaction" class="row">

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div class="col-xs-12 col-md-10 col-lg-8 col-xl-6" style="margin-bottom: 10px; margin-top: 20px" >
        <form id="cardboxx-inputform">
            <input id="cardboxx-check-answer" type="submit" value="{{# str }} checkanswer, cardboxx {{/ str }}" class="btn btn-primary">
        </form>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div id="cardboxx-cardcontainer" class="col-xs-12 col-md-10 col-lg-8 col-xl-6" style="margin-bottom: 10px">
        <button id="cardboxx-end-session" type="button" class="btn btn-secondary">{{# str }} endpractice, cardboxx {{/ str }}</button>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

</div>